<% content_for :head_titulo do %>
  <h1>Noticias</h1>
  <p class="lead">Ultimas Noticias en el Sistema</p>
<% end %>

<section>
	<div class="page-header"><h1>Arhivos <small>de Noticias</small></h1></div>
	<p class="lead"></p>
	<table class="table table-striped table-bordered">
	    <tr>
	    	<th>#id</th>
	      	<th>Titulo</th>	      
	      	<th>Acion</th>	      
	    </tr>
	    <% @notices.each do |notice| %>
	    <tr>
	    	<td><%= notice.id %></td>
	      	<td><%= notice.titulo[0,50] %></td>	      
	      	<td><%= link_to raw('<i class="icon-file"></i> Ver'), "/inicios/noticias_show/#{notice.id}", :class=>"btn" %></td>            
	    </tr>
	    <% end %>
  </table>
</section>