<section>
  <div class="page-header">
    <h1>Ultimas <small>Noticias Agregadas</small></h1>
  </div>
  <table class="table table-striped table-bordered">
    <tr>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @notices.each do |notice| %>
    <tr>
      <td><%= notice.titulo[0,30] %></td>
      <td><%= notice.resumen[0,150] %></td>
      <td><%= link_to 'Ver', notice, :class=>"btn" %></td>
      <td><%= link_to 'Editar', edit_notice_path(notice), :class=>"btn" %></td>
      <td><%= link_to 'Eliminar', notice, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn" %></td>
    </tr>
    <% end %>
  </table>
  <div class="well">
    <%= link_to raw('<i class="icon-lock icon-white"></i> Nueva Noticia'), new_notice_path, :class=>"btn btn-primary" %>
  </div>
</section>